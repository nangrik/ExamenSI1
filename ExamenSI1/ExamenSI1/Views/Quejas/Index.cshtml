@model IEnumerable<ExamenSI1.Models.Queja>

@{ 
    ViewData["title"] = "Registro de Quejas";
}

<h2><center>Quejas Laborales de FAMGAR SAS</center></h2>


<div class="row">
    <div class="col-auto">
        <input type="text" class="form-control-plaintext" id="txt-search" placeholder="Buscar..." />
    </div>
    <div class="col-auto">
        <a class="btn btn-success" onclick="Queja_Search()" id="Search-Link">Buscar</a>
        <a asp-action="Create" class="btn btn-success">Nueva Queja</a>
    </div>
</div>
<div class="row">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.Quejafecha)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.QuejaIdentidad)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(ModelItem => item.Quejafecha)</td>
                <td>@Html.DisplayFor(ModelItem => item.QuejaIdentidad)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.QuejaId">Editar</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.QuejaId">Detalles</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.QuejaId">Borrar</a>
                </td>
            </tr>
                <tr>
                    <td>_______________________</td>
                    <td>_______________________</td>
                    <td>_______________________</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/Queja.js" asp-append-version="true"></script>